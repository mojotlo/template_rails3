<header>
	
	<%= link_to logo, root_path %>
	<nav class="round">
		<ul>
			<li><%=link_to 'Home', root_path %></li>
			<li><%=link_to 'Help', help_path %></li>			
					
					
			<% if signed_in? %>
			<li><%=link_to 'Sign out', signout_path, :method  => :delete%></li>
			

			<li><%=link_to "View Profile", user_path(current_user)%>
				<% if current_user.profile.nil?%>
			<li><%=link_to 'Create Profile', new_user_profile_path(current_user)%></li>
				<% else %>
				<%@profile=current_user.profile%>
			 	<li><%=link_to 'Edit Profile', edit_user_profile_path(current_user, @profile)%></li>

				<% end %>
			<li><%=link_to 'Settings', settings_path(current_user)%></li>
			<li><%=link_to 'Change Password', change_password_page_path(current_user)%></li>
			<%else%>
			<li><%=link_to 'Sign in', signin_path %></li>


			<% end %>
			
		</ul>
	</nav>
</header>